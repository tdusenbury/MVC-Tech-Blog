<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    {{!-- <link rel="stylesheet" href="./css/style.css"> --}}
    <title>T's Blog of Tech</title>
</head>

<body>
    <header id="jumbotron1" class="container">
        <div id="headerWrapper" class="row">
            <div class="titlewrapper col-8">
                <h1 class="row-12 display-4" id="main-title">T's Blog of Tech</h1>
                <p class="row-12 lead" id="main-title-text">Welcome to my tech blog!</p>
            </div>
            
            <nav id="nav" class="col-4 d-flex justify-content-end offset-8" style="display: inline-block">

                {{#if LoggedIn}}

                <a href="/home" class="navlink">
                    <button type="button" class="btn btn-secondary">
                        Home
                    </button>
                </a>

                {{/if}}

                {{#if LoggedIn}}

                <a href="/dashboard" class="navlink">
                    <button type="button" class="btn btn-secondary">
                        Dashboard
                    </button>
                </a>  

                {{/if}}

                {{#unless LoggedIn}} 

                <a href="/signup" class="navlink">
                    <button type="button" class="btn btn-secondary">
                        Sign up
                    </button>
                </a>

                {{/unless}}

                {{#unless LoggedIn}} 

                <a href="/login" id = "logInBtn" class="navlink">
                    <button type="button" class="btn btn-secondary">
                        Log In
                    </button>
                </a>   

                {{/unless}}    

                {{#if LoggedIn}}

                <a href="/" id = "logout" class="navlink">
                    <button type="button" class="btn btn-secondary">
                        Log Out
                    </button>
                </a>

                {{/if}}

            </nav>
        </div>
    </header>
    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <main class="container">
        <div class="row-12 blogWrapper">

    <br>
    <br>

    {{{body}}}
        {{!-- {{#each posts}}
            <h2 class="postTitle">
                {{this.title}}
            </h2>
            
            <p class="postContent">
                {{this.content}} 
            </p> 
        <br>
            <div class="authorWrapper row-4">
                <sm>
                    {{user.username}}
                    {{make_date date_created}}
                </sm>
            </div>
        <br>
        <br>
    </main>
        {{/each}} --}}
        {{#if LoggedIn}}
            <script src="./js/logout.js"></script>
        {{/if}}
</body>

</html>